<config>
    <sections>
        <inchoo_owa translate="label" module="inchoo_owa">
            <label>Open Web Analytics</label>
            <tab>sales</tab>
            <frontend_type>text</frontend_type>
            <sort_order>2000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Open Web Analytics Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label" module="inchoo_owa">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>                        
                        <site_id translate="label" module="inchoo_owa">
                            <label>Site ID</label>
                            <comment><![CDATA[Site ID string provided by "Open Web Analytics", i.e. 4d801bf4d18bd45b9ba094b34ee3de6c.]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </site_id>
                        <owa_base_url translate="label" module="inchoo_owa">
                            <label>Base Url</label>
                            <comment><![CDATA[Url of the site where "Open Web Analytics" is installed and publicly available, i.e. http://owa.myserver.net/.]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </owa_base_url>                        
                    </fields>
                </settings>
            </groups>
        </inchoo_owa>
    </sections>
</config>